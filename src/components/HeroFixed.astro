---
interface Props {
  text: string;
  heroDeskWebp?: string;
  heroTabWebp?: string;
  heroMobWebp?: string;
  heroDesk: string;
  heroTab: string;
  heroMob: string;
}

const { text, heroDeskWebp, heroTabWebp, heroMobWebp, heroDesk, heroTab, heroMob } = Astro.props;
---

<div class="hero-fixed relative w-full h-[60vh] lg:h-[70vh] overflow-hidden -mt-24 lg:-mt-32">
  <div class="absolute inset-0 bg-cover bg-center bg-no-repeat hero-bg"></div>
  <div class="absolute inset-0 bg-black/40 flex items-center justify-center">
    <h1 class="text-5xl lg:text-7xl font-vidaloka text-white text-center px-4">
      {text}
    </h1>
  </div>
</div>

<style define:vars={{ heroDeskWebp, heroTabWebp, heroMobWebp, heroDesk, heroTab, heroMob }}>
  .hero-bg {
    /* Mobile first */
    background-image: var(--heroMobWebp, var(--heroMob));
  }

  @supports (background-image: url('data:image/webp;base64,')) {
    .hero-bg {
      background-image: var(--heroMobWebp, var(--heroMob));
    }

    @media (min-width: 768px) {
      .hero-bg {
        background-image: var(--heroTabWebp, var(--heroTab));
      }
    }

    @media (min-width: 1024px) {
      .hero-bg {
        background-image: var(--heroDeskWebp, var(--heroDesk));
      }
    }
  }

  @supports not (background-image: url('data:image/webp;base64,')) {
    .hero-bg {
      background-image: var(--heroMob);
    }

    @media (min-width: 768px) {
      .hero-bg {
        background-image: var(--heroTab);
      }
    }

    @media (min-width: 1024px) {
      .hero-bg {
        background-image: var(--heroDesk);
      }
    }
  }
</style>