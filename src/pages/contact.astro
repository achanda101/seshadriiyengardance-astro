---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact | Seshadri Iyengar" noHero={true}>
  <div class="pt-24 lg:pt-32 bg-white py-24">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-5xl font-vidaloka text-center mb-12">Contact Us</h1>

        <div class="grid md:grid-cols-2 gap-12">
          <div class="space-y-6">
            <h2 class="text-3xl font-vidaloka mb-4">Get In Touch</h2>
            <div class="space-y-4">
              <div class="flex items-start gap-4">
                <i class="far fa-envelope text-2xl text-gray-700 mt-1"></i>
                <div>
                  <h3 class="font-semibold text-lg mb-2">Email</h3>
                  <a href="mailto:icfabengaluru@gmail.com" class="fancy-link text-gray-700">
                    icfabengaluru@gmail.com
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <i class="fab fa-facebook text-2xl text-gray-700 mt-1"></i>
                <div>
                  <h3 class="font-semibold text-lg mb-2">Facebook</h3>
                  <a href="https://www.facebook.com/Iyengar-Centre-for-FINE-ARTS-293774594468547" target="_blank" class="fancy-link text-gray-700">
                    Iyengar Centre for FINE ARTS
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <i class="fab fa-instagram text-2xl text-gray-700 mt-1"></i>
                <div>
                  <h3 class="font-semibold text-lg mb-2">Instagram</h3>
                  <a href="https://www.instagram.com/icfabengaluru/" target="_blank" class="fancy-link text-gray-700">
                    @icfabengaluru
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <i class="fab fa-youtube text-2xl text-gray-700 mt-1"></i>
                <div>
                  <h3 class="font-semibold text-lg mb-2">YouTube</h3>
                  <a href="https://www.youtube.com/channel/UCS54iy-nprfzdtoy_xOaHCw" target="_blank" class="fancy-link text-gray-700">
                    Iyengar Centre for Fine Arts
                  </a>
                </div>
              </div>
            </div>
          </div>

          <div>
            <h2 class="text-3xl font-vidaloka mb-4">Location</h2>
            <p class="text-lg text-gray-700 mb-4">
              Iyengar Centre for Fine Arts<br />
              Bangalore, India
            </p>
            <div class="rounded-lg overflow-hidden shadow-lg mt-6">
              <img
                src="https://res.cloudinary.com/driyengar/image/upload/v1509773872/icfa_logo_sml.jpg"
                alt="ICFA Logo"
                class="w-full h-auto"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>